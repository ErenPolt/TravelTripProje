@using TravelTripProje.Models.Sınıflar
@model List<Yorumlar>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail Adresi</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.userName</td>
            <td>@item.Mail</td>
            <td>@item.Comment</td>
            <td>@item.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateComment/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>


