@using TravelTripProje.Models.Sınıflar
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {


    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt=""  style="width:322px; height:158px;"/>
        </div>

        <div class="left-text">
            <h4>@item.Title</h4>
            <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
            <p>@item.Description.Substring(0,90)...</p>
            <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Devamını Oku →</span></a></p>
        </div>
       
    </div>
    }
    @Html.Action("Partial2","Default")
  
    <div class="clear"></div>
</div>